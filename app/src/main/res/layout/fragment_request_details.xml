<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/teabackground">

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".4"
            android:background="@drawable/background_fade">

        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_16"
                android:layout_marginTop="@dimen/margin_top_16"
                android:layout_marginRight="@dimen/margin_right_16"
                android:layout_marginBottom="@dimen/margin_bottom_16"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_20">

                <TextView
                    android:id="@+id/serviceName"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_right_16"
                    android:layout_marginTop="@dimen/margin_top_8"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_top_8"
                    android:background="@drawable/edit_style"
                    android:drawablePadding="@dimen/padding_16"
                    android:hint="Service Name"
                    android:inputType="text"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/padding_16"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_20" />


                <TextView
                    android:id="@+id/description"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_right_16"
                    android:layout_marginTop="@dimen/margin_top_8"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_top_8"
                    android:background="@drawable/edit_style"
                    android:drawablePadding="@dimen/padding_16"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:padding="@dimen/padding_16"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_20" />

                <TextView
                    android:id="@+id/user"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_right_16"
                    android:layout_marginTop="@dimen/margin_top_8"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_top_8"
                    android:background="@drawable/edit_style"
                    android:drawablePadding="@dimen/padding_16"
                    android:hint="User"
                    android:inputType="text"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/padding_16"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_16"
                    android:layout_marginTop="@dimen/margin_top_16"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_8">

                    <Button
                        android:id="@+id/contact_btn"
                        style="@style/Font_family_regular"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_right_4"
                        android:layout_marginTop="@dimen/margin_top_8"
                        android:layout_marginRight="@dimen/margin_right_4"
                        android:layout_marginBottom="@dimen/margin_top_8"
                        android:background="@drawable/red_style"
                        android:text="Contact User"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_20" />

                    <Button
                        android:id="@+id/location_btn"
                        style="@style/Font_family_regular"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_right_8"
                        android:layout_marginTop="@dimen/margin_top_8"
                        android:layout_marginRight="@dimen/margin_right_8"
                        android:layout_marginBottom="@dimen/margin_top_8"
                        android:background="@drawable/red_style"
                        android:text="Open Location"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_16"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_bottom_16"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_20">

                    <Button
                        android:id="@+id/approve_btn"
                        style="@style/Font_family_regular"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_right_4"
                        android:layout_marginTop="@dimen/margin_top_8"
                        android:layout_marginRight="@dimen/margin_right_4"
                        android:layout_marginBottom="@dimen/margin_top_8"
                        android:background="@drawable/red_style"
                        android:text="Approve"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_20" />

                    <Button
                        android:id="@+id/reject_btn"
                        style="@style/Font_family_regular"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_right_8"
                        android:layout_marginTop="@dimen/margin_top_8"
                        android:layout_marginRight="@dimen/margin_right_8"
                        android:layout_marginBottom="@dimen/margin_top_8"
                        android:background="@drawable/red_style"
                        android:text="Reject"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_20" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>